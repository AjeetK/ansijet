include ../_mixins

- var pageTitle = 'Triggers'

extends ../layout

block content

  #triggers

    h1 All triggers

    if 0 < triggers.length
      table.triggers
        thead
          th Description
          th Playbook
          th Type
        - each trigger in triggers
          tr
            td
              a(href=trigger.viewUrl) #{trigger.description}
            td 
              if trigger.playbook
                a(href=trigger.playbook.viewUrl) #{trigger.playbook.name}
            td #{trigger.type}
    else
      em No triggers found