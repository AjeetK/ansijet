include ./_mixins

- var pageTitle = 'Dashboard'

extends layout


block content

  #dashboard

    .triggers
      h1 Active triggers
      table
        thead
          th Description
          th Playbook
          th Type
          th URL template
        - each trigger in triggers
          tr
            td #{trigger.description}
            td 
              if trigger.playbook
                a(href="/playbooks/" + trigger.playbook.name) #{trigger.playbook.name}
            td #{trigger.type}
            td
              +renderUrlTemplate(trigger.urlTemplate)

    .logs
      h2
        span Recent logs
        a.subtitle(href="/logs") View all

      +renderLogTable(logs)
